{
    "compilerOptions" : {
        "target": "ES2015",
        "module" :"ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true, // ESM / commonJS 방식 둘다 사용하기
        "lib" : ["ESNext","DOM"],
        "strict": true,
        "typeRoots": [
            "./node_modules/@types" // 기본값이라 안 적어도 됨
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}